<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/25"
    xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="com.javafx.proyecto.LoginController"
    prefWidth="400" prefHeight="260">

    <center>
        <VBox spacing="15" alignment="CENTER">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20" />
            </padding>

            <children>
                <HBox alignment="CENTER" spacing="10">
                    <children>
                        <ImageView fitHeight="40" fitWidth="40" preserveRatio="true">
                            <image>
                                <Image url="@miapp/icons/paw.png" />
                            </image>
                        </ImageView>
                        <Label text="Veterinario"
                            style="-fx-font-size: 20px; -fx-font-weight: bold;" />
                    </children>
                </HBox>

                <GridPane hgap="10" vgap="10">
                    <children>
                        <Label text="Usuario:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                        <TextField fx:id="txtUsuario" GridPane.rowIndex="0" GridPane.columnIndex="1"
                            promptText="admin" />

                        <Label text="ContraseÃ±a:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                        <PasswordField fx:id="txtPassword" GridPane.rowIndex="1"
                            GridPane.columnIndex="1"
                            promptText="admin" />
                    </children>
                </GridPane>

                <Label fx:id="lblError" textFill="red" />

                <Button fx:id="btnEntrar"
                    text="_Entrar"
                    mnemonicParsing="true"
                    onAction="#onEntrar"
                    defaultButton="true"
                    prefWidth="120" />
            </children>
        </VBox>
    </center>
</BorderPane>