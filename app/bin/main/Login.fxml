<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/25"
    xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="com.javafx.proyecto.LoginController"
    prefWidth="450" prefHeight="300"
    fx:id="loginPane"
    stylesheets="@styles.css">

    <center>
        <VBox fx:id="loginContainer" spacing="15" alignment="CENTER" styleClass="login-container">
            <padding>
                <Insets top="30" right="30" bottom="30" left="30" />
            </padding>

            <children>
                <HBox alignment="CENTER" spacing="10">
                    <children>
                        <ImageView fitHeight="50" fitWidth="50" preserveRatio="true">
                            <image>
                                <Image url="@miapp/icons/paw.png" />
                            </image>
                        </ImageView>
                        <Label text="PawLink" styleClass="label-subtitulo"
                            style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #276FBF;" />
                    </children>
                </HBox>

                <Label text="Acceso Veterinario" style="-fx-font-size: 14px; -fx-text-fill: #6C757D;" />

                <GridPane hgap="10" vgap="15" fx:id="formGrid">
                    <children>
                        <Label text="Usuario:" GridPane.rowIndex="0" GridPane.columnIndex="0"
                               style="-fx-font-weight: bold;" />
                        <TextField fx:id="txtUsuario" GridPane.rowIndex="0" GridPane.columnIndex="1"
                            promptText="admin" prefWidth="220" />

                        <Label text="ContraseÃ±a:" GridPane.rowIndex="1" GridPane.columnIndex="0"
                               style="-fx-font-weight: bold;" />
                        <PasswordField fx:id="txtPassword" GridPane.rowIndex="1"
                            GridPane.columnIndex="1"
                            promptText="admin" prefWidth="220" />
                    </children>
                </GridPane>

                <Label fx:id="lblError" textFill="red" minHeight="20" />

                <Button fx:id="btnEntrar"
                    text="_Entrar"
                    mnemonicParsing="true"
                    onAction="#onEntrar"
                    defaultButton="true"
                    prefWidth="140"
                    prefHeight="35" />
            </children>
        </VBox>
    </center>
</BorderPane>